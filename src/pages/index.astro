---
import Layout from '../layouts/Layout.astro';
import AppCard from '../components/AppCard.astro';

const apps = [
  {
    name: 'Scalpel for Jira',
    platform: 'Jira' as const,
    description: 'Powerful admin toolkit for Jira. Manage custom fields, workflows, screens, and more â€” clean up your instance with precision.',
    href: '/apps/scalpel-jira',
    icon: '/icon-scalpel-jira.png',
  },
  {
    name: 'Scalpel for Confluence',
    platform: 'Confluence' as const,
    description: 'Admin toolkit for Confluence. Analyze spaces, clean up content, manage permissions, and keep your wiki in shape.',
    href: '/apps/scalpel-confluence',
    icon: '/icon-scalpel-confluence.png',
    comingSoon: true,
  },
  {
    name: 'Legacy URL Scanner for Jira',
    platform: 'Jira' as const,
    description: 'Find and replace outdated Jira Server/Data Center URLs across your Cloud instance. Ensure a clean migration.',
    href: '/apps/legacy-url-scanner-jira',
    icon: '/icon-legacy-url-scanner.png',
  },
  {
    name: 'Legacy URL Scanner for Confluence',
    platform: 'Confluence' as const,
    description: 'Detect and fix legacy URLs in Confluence pages, blogs, and comments after migrating to Cloud.',
    href: '/apps/legacy-url-scanner-confluence',
    icon: '/icon-legacy-url-scanner.png',
    comingSoon: true,
  },
  {
    name: 'Alchemist for Jira',
    platform: 'Jira' as const,
    description: 'Convert ScriptRunner, SIL & Groovy scripts to native Jira Automation and Forge. Built-in risk assessment and 1,100+ conversion patterns.',
    href: '/apps/alchemist-jira',
    icon: '/icon-alchemist.png',
  },
  {
    name: 'Rank Cascading for Jira',
    platform: 'Jira' as const,
    description: 'Cascade ranking from epics to child issues. Keep your backlog priorities aligned across the hierarchy.',
    href: '/apps/rank-cascading-jira',
    icon: '/icon-rank-cascading.png',
  },
];
---

<Layout title="Home">
  <!-- Hero -->
  <section class="hero-glow bg-gradient-to-b from-primary-dark via-primary-dark to-surface-dark text-white py-24 md:py-32">
    <div class="max-w-6xl mx-auto px-6 text-center relative z-10">
      <img src="/logo.png" alt="CFCON Consulting" class="h-36 md:h-52 mx-auto mb-10 drop-shadow-2xl" />
      <h1 class="text-4xl md:text-6xl font-extrabold leading-tight mb-6 tracking-tight">
        Atlassian Consulting<br/><span class="gradient-text">& Marketplace Apps</span>
      </h1>
      <p class="text-lg md:text-xl text-white/70 leading-relaxed mb-10 max-w-2xl mx-auto">
        We help organizations get the most out of Jira and Confluence. From expert consulting to purpose-built apps on the Atlassian Marketplace.
      </p>
      <div class="flex flex-wrap gap-4 justify-center mb-12">
        <a href="/apps" class="btn-glow inline-flex items-center px-7 py-3.5 bg-primary text-white font-semibold rounded-xl transition-colors">
          Explore our Apps
        </a>
        <a href="/contact" class="btn-outline-glow inline-flex items-center px-7 py-3.5 border border-white/25 text-white font-semibold rounded-xl">
          Get in touch
        </a>
      </div>
      <div class="flex flex-wrap gap-3 justify-center">
        <span class="badge-shimmer inline-flex items-center gap-2 px-4 py-2 rounded-full border border-white/15 bg-white/5 text-sm font-medium backdrop-blur-sm">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor"><path d="M11.571 5.143L5.143 11.571l6.428 6.429 6.429-6.429-6.429-6.428zm0-2.857L18.857 9.57l-7.286 7.286L4.286 9.571 11.571 2.286z"/><path d="M11.571 5.143l-6.428 6.428h12.857l-6.429-6.428z" opacity=".4"/></svg>
          Atlassian Partner
        </span>
        <span class="badge-shimmer inline-flex items-center gap-2 px-4 py-2 rounded-full border border-white/15 bg-white/5 text-sm font-medium backdrop-blur-sm">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" stroke-linecap="round" stroke-linejoin="round"/></svg>
          Certified Professional
        </span>
        <span class="badge-shimmer inline-flex items-center gap-2 px-4 py-2 rounded-full border border-white/15 bg-white/5 text-sm font-medium backdrop-blur-sm">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z" stroke-linecap="round" stroke-linejoin="round"/></svg>
          Runs on Atlassian
        </span>
      </div>
    </div>
  </section>

  <!-- Services Overview -->
  <section class="py-24 bg-surface dot-pattern">
    <div class="max-w-6xl mx-auto px-6">
      <div class="text-center mb-14 fade-in">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">What we do</h2>
        <p class="text-text-light max-w-2xl mx-auto text-lg">
          Two pillars, one goal: making your Atlassian tools work harder for you.
        </p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <!-- Consulting -->
        <div class="fade-in fade-in-delay-1 glass-card rounded-2xl p-8">
          <div class="w-12 h-12 bg-primary/10 rounded-xl flex items-center justify-center mb-5 ring-1 ring-primary/20">
            <svg width="24" height="24" fill="none" stroke="currentColor" class="text-primary" stroke-width="2">
              <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-3">Consulting</h3>
          <p class="text-text-light leading-relaxed mb-5">
            Process analysis, cloud migrations, infrastructure design, and ongoing support. We optimize your Atlassian setup so your team can focus on what matters.
          </p>
          <ul class="space-y-2.5 text-sm text-text-light">
            <li class="flex items-center gap-2.5"><span class="w-5 h-5 rounded-full bg-primary/10 flex items-center justify-center flex-shrink-0"><span class="text-primary text-xs">&#10003;</span></span> Cloud migration & strategy</li>
            <li class="flex items-center gap-2.5"><span class="w-5 h-5 rounded-full bg-primary/10 flex items-center justify-center flex-shrink-0"><span class="text-primary text-xs">&#10003;</span></span> Process optimization</li>
            <li class="flex items-center gap-2.5"><span class="w-5 h-5 rounded-full bg-primary/10 flex items-center justify-center flex-shrink-0"><span class="text-primary text-xs">&#10003;</span></span> Administration & support</li>
            <li class="flex items-center gap-2.5"><span class="w-5 h-5 rounded-full bg-primary/10 flex items-center justify-center flex-shrink-0"><span class="text-primary text-xs">&#10003;</span></span> Training & enablement</li>
          </ul>
        </div>

        <!-- Marketplace Apps -->
        <div class="fade-in fade-in-delay-2 glass-card rounded-2xl p-8">
          <div class="w-12 h-12 bg-accent/10 rounded-xl flex items-center justify-center mb-5 ring-1 ring-accent/20">
            <svg width="24" height="24" fill="none" stroke="currentColor" class="text-accent" stroke-width="2">
              <rect x="3" y="3" width="7" height="7" rx="1" stroke-linecap="round" stroke-linejoin="round"/>
              <rect x="14" y="3" width="7" height="7" rx="1" stroke-linecap="round" stroke-linejoin="round"/>
              <rect x="3" y="14" width="7" height="7" rx="1" stroke-linecap="round" stroke-linejoin="round"/>
              <rect x="14" y="14" width="7" height="7" rx="1" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-3">Marketplace Apps</h3>
          <p class="text-text-light leading-relaxed mb-5">
            Purpose-built Forge apps for Jira and Confluence. Built on Atlassian's secure cloud platform, designed for real-world admin needs.
          </p>
          <ul class="space-y-2.5 text-sm text-text-light">
            <li class="flex items-center gap-2.5"><span class="w-5 h-5 rounded-full bg-accent/10 flex items-center justify-center flex-shrink-0"><span class="text-accent text-xs">&#10003;</span></span> Runs on Atlassian (Forge)</li>
            <li class="flex items-center gap-2.5"><span class="w-5 h-5 rounded-full bg-accent/10 flex items-center justify-center flex-shrink-0"><span class="text-accent text-xs">&#10003;</span></span> No external data transfer</li>
            <li class="flex items-center gap-2.5"><span class="w-5 h-5 rounded-full bg-accent/10 flex items-center justify-center flex-shrink-0"><span class="text-accent text-xs">&#10003;</span></span> Free, Standard & Advanced editions</li>
            <li class="flex items-center gap-2.5"><span class="w-5 h-5 rounded-full bg-accent/10 flex items-center justify-center flex-shrink-0"><span class="text-accent text-xs">&#10003;</span></span> Jira & Confluence</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <div class="section-divider"></div>

  <!-- Apps Preview -->
  <section class="py-24">
    <div class="max-w-6xl mx-auto px-6">
      <div class="text-center mb-14 fade-in">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Our Apps</h2>
        <p class="text-text-light max-w-2xl mx-auto text-lg">
          Admin tools built by Atlassian practitioners, for Atlassian practitioners.
        </p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {apps.map((app, i) => (
          <div class:list={['fade-in h-full', i % 2 === 0 ? 'fade-in-delay-1' : 'fade-in-delay-2']}>
            <AppCard {...app} />
          </div>
        ))}
      </div>
      <div class="text-center mt-12 fade-in">
        <a href="https://marketplace.atlassian.com/vendors/69072148" target="_blank" rel="noopener" class="inline-flex items-center gap-2 text-primary font-medium hover:underline underline-offset-4 transition-colors">
          View all on Atlassian Marketplace
          <svg width="16" height="16" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 12l5-5-5-5" stroke-linecap="round" stroke-linejoin="round"/></svg>
        </a>
      </div>
    </div>
  </section>
</Layout>
