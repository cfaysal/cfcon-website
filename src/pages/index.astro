---
import Layout from '../layouts/Layout.astro';
import AppCard from '../components/AppCard.astro';

const apps = [
  {
    name: 'Scalpel for Jira',
    platform: 'Jira' as const,
    description: 'Powerful admin toolkit for Jira. Manage custom fields, workflows, screens, and more â€” clean up your instance with precision.',
    href: '/apps/scalpel-jira',
    icon: '/icon-scalpel-jira.png',
  },
  {
    name: 'Scalpel for Confluence',
    platform: 'Confluence' as const,
    description: 'Admin toolkit for Confluence. Analyze spaces, clean up content, manage permissions, and keep your wiki in shape.',
    href: '/apps/scalpel-confluence',
    icon: '/icon-scalpel-confluence.png',
    comingSoon: true,
  },
  {
    name: 'Legacy URL Scanner for Jira',
    platform: 'Jira' as const,
    description: 'Find and replace outdated Jira Server/Data Center URLs across your Cloud instance. Ensure a clean migration.',
    href: '/apps/legacy-url-scanner-jira',
    icon: '/icon-legacy-url-scanner.png',
  },
  {
    name: 'Legacy URL Scanner for Confluence',
    platform: 'Confluence' as const,
    description: 'Detect and fix legacy URLs in Confluence pages, blogs, and comments after migrating to Cloud.',
    href: '/apps/legacy-url-scanner-confluence',
    icon: '/icon-legacy-url-scanner.png',
    comingSoon: true,
  },
  {
    name: 'Alchemist for Jira',
    platform: 'Jira' as const,
    description: 'Convert ScriptRunner, SIL & Groovy scripts to native Jira Automation and Forge. Built-in risk assessment and 1,100+ conversion patterns.',
    href: '/apps/alchemist-jira',
    icon: '/icon-alchemist.png',
  },
  {
    name: 'Rank Cascading for Jira',
    platform: 'Jira' as const,
    description: 'Cascade ranking from epics to child issues. Keep your backlog priorities aligned across the hierarchy.',
    href: '/apps/rank-cascading-jira',
    icon: '/icon-rank-cascading.png',
  },
];
---

<Layout title="Home">
  <!-- Hero -->
  <section class="bg-gradient-to-br from-primary to-primary-dark text-white py-20">
    <div class="max-w-6xl mx-auto px-6 text-center">
      <img src="/logo.png" alt="CFCON Consulting" class="h-40 md:h-56 mx-auto mb-10" />
      <h1 class="text-3xl md:text-5xl font-bold leading-tight mb-6">
        Atlassian Consulting<br/>& Marketplace Apps
      </h1>
      <p class="text-xl text-blue-100 leading-relaxed mb-8 max-w-2xl mx-auto">
        We help organizations get the most out of Jira and Confluence. From expert consulting to purpose-built apps on the Atlassian Marketplace.
      </p>
      <div class="flex flex-wrap gap-4 justify-center mb-10">
        <a href="/apps" class="inline-flex items-center px-6 py-3 bg-white text-primary font-semibold rounded-lg hover:bg-gray-100 transition-colors">
          Explore our Apps
        </a>
        <a href="/contact" class="inline-flex items-center px-6 py-3 border-2 border-white text-white font-semibold rounded-lg hover:bg-white/10 transition-colors">
          Get in touch
        </a>
      </div>
      <div class="flex flex-wrap gap-3 justify-center">
        <span class="inline-flex items-center gap-2 px-4 py-2 rounded-full border border-white/30 bg-white/10 text-sm font-medium">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor"><path d="M11.571 5.143L5.143 11.571l6.428 6.429 6.429-6.429-6.429-6.428zm0-2.857L18.857 9.57l-7.286 7.286L4.286 9.571 11.571 2.286z"/><path d="M11.571 5.143l-6.428 6.428h12.857l-6.429-6.428z" opacity=".4"/></svg>
          Atlassian Partner
        </span>
        <span class="inline-flex items-center gap-2 px-4 py-2 rounded-full border border-white/30 bg-white/10 text-sm font-medium">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" stroke-linecap="round" stroke-linejoin="round"/></svg>
          Atlassian Certified Professional
        </span>
        <span class="inline-flex items-center gap-2 px-4 py-2 rounded-full border border-white/30 bg-white/10 text-sm font-medium">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z" stroke-linecap="round" stroke-linejoin="round"/></svg>
          Runs on Atlassian
        </span>
      </div>
    </div>
  </section>

  <!-- Services Overview -->
  <section class="py-20 bg-surface">
    <div class="max-w-6xl mx-auto px-6">
      <h2 class="text-3xl font-bold text-center mb-4">What we do</h2>
      <p class="text-text-light text-center max-w-2xl mx-auto mb-12">
        Two pillars, one goal: making your Atlassian tools work harder for you.
      </p>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <!-- Consulting -->
        <div class="bg-surface-raised border border-border rounded-xl p-8">
          <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center mb-4">
            <svg width="24" height="24" fill="none" stroke="currentColor" class="text-primary" stroke-width="2">
              <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-3">Consulting</h3>
          <p class="text-text-light leading-relaxed mb-4">
            Process analysis, cloud migrations, infrastructure design, and ongoing support. We optimize your Atlassian setup so your team can focus on what matters.
          </p>
          <ul class="space-y-2 text-sm text-text-light">
            <li class="flex items-center gap-2"><span class="text-primary">&#10003;</span> Cloud migration & strategy</li>
            <li class="flex items-center gap-2"><span class="text-primary">&#10003;</span> Process optimization</li>
            <li class="flex items-center gap-2"><span class="text-primary">&#10003;</span> Administration & support</li>
            <li class="flex items-center gap-2"><span class="text-primary">&#10003;</span> Training & enablement</li>
          </ul>
        </div>

        <!-- Marketplace Apps -->
        <div class="bg-surface-raised border border-border rounded-xl p-8">
          <div class="w-12 h-12 bg-accent/10 rounded-lg flex items-center justify-center mb-4">
            <svg width="24" height="24" fill="none" stroke="currentColor" class="text-accent" stroke-width="2">
              <rect x="3" y="3" width="7" height="7" rx="1" stroke-linecap="round" stroke-linejoin="round"/>
              <rect x="14" y="3" width="7" height="7" rx="1" stroke-linecap="round" stroke-linejoin="round"/>
              <rect x="3" y="14" width="7" height="7" rx="1" stroke-linecap="round" stroke-linejoin="round"/>
              <rect x="14" y="14" width="7" height="7" rx="1" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-3">Marketplace Apps</h3>
          <p class="text-text-light leading-relaxed mb-4">
            Purpose-built Forge apps for Jira and Confluence. Built on Atlassian's secure cloud platform, designed for real-world admin needs.
          </p>
          <ul class="space-y-2 text-sm text-text-light">
            <li class="flex items-center gap-2"><span class="text-accent">&#10003;</span> Runs on Atlassian (Forge)</li>
            <li class="flex items-center gap-2"><span class="text-accent">&#10003;</span> No external data transfer</li>
            <li class="flex items-center gap-2"><span class="text-accent">&#10003;</span> Free, Standard & Advanced editions</li>
            <li class="flex items-center gap-2"><span class="text-accent">&#10003;</span> Jira & Confluence</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Apps Preview -->
  <section class="py-20">
    <div class="max-w-6xl mx-auto px-6">
      <h2 class="text-3xl font-bold text-center mb-4">Our Apps</h2>
      <p class="text-text-light text-center max-w-2xl mx-auto mb-12">
        Admin tools built by Atlassian practitioners, for Atlassian practitioners.
      </p>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {apps.map((app) => (
          <AppCard {...app} />
        ))}
      </div>
      <div class="text-center mt-10">
        <a href="https://marketplace.atlassian.com/vendors/69072148" target="_blank" rel="noopener" class="text-primary font-medium hover:underline">
          View all on Atlassian Marketplace &rarr;
        </a>
      </div>
    </div>
  </section>
</Layout>
