---
interface Props {
  name: string;
  platform: 'Jira' | 'Confluence';
  description: string;
  href: string;
  icon: string;
}

const { name, platform, description, href, icon } = Astro.props;

const platformColor = platform === 'Jira' ? 'bg-blue-100 text-blue-700' : 'bg-teal-100 text-teal-700';
---

<a href={href} class="group block bg-white border border-border rounded-xl p-6 hover:shadow-lg hover:border-primary-light transition-all duration-200">
  <div class="flex items-start gap-4">
    <img src={icon} alt={name} class="w-12 h-12 rounded-lg" />
    <div class="flex-1">
      <div class="flex items-center gap-2 mb-2">
        <h3 class="font-semibold text-lg text-text group-hover:text-primary transition-colors">{name}</h3>
        <span class={`text-xs font-medium px-2 py-0.5 rounded-full ${platformColor}`}>{platform}</span>
      </div>
      <p class="text-text-light text-sm leading-relaxed">{description}</p>
    </div>
  </div>
  <div class="mt-4 text-sm font-medium text-primary opacity-0 group-hover:opacity-100 transition-opacity">
    Learn more &rarr;
  </div>
</a>
