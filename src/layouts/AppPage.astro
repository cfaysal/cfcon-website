---
import Layout from './Layout.astro';

interface Props {
  name: string;
  platform: 'Jira' | 'Confluence';
  tagline: string;
  description: string;
  features: string[];
  marketplaceUrl?: string;
  icon: string;
  comingSoon?: boolean;
}

const { name, platform, tagline, description, features, marketplaceUrl, icon, comingSoon = false } = Astro.props;
const platformColor = platform === 'Jira' ? 'bg-blue-500/10 text-blue-400 border-blue-500/20' : 'bg-teal-500/10 text-teal-400 border-teal-500/20';

const appJsonLd = {
  '@context': 'https://schema.org',
  '@type': 'SoftwareApplication',
  name,
  applicationCategory: 'BusinessApplication',
  operatingSystem: 'Cloud',
  description: tagline,
  image: new URL(icon, Astro.site).href,
  offers: {
    '@type': 'Offer',
    price: '0',
    priceCurrency: 'USD',
    availability: comingSoon ? 'https://schema.org/PreOrder' : 'https://schema.org/InStock',
  },
  ...(marketplaceUrl && { url: marketplaceUrl }),
};
---

<Layout title={name} description={tagline} ogImage={icon} ogType="website" jsonLd={appJsonLd}>
  <section class="py-24">
    <div class="max-w-4xl mx-auto px-6">
      <!-- Header -->
      <div class="mb-14 fade-in">
        <a href="/apps" class="inline-flex items-center gap-1 text-sm text-text-light hover:text-primary transition-colors mb-6">
          <svg width="16" height="16" fill="none" stroke="currentColor" stroke-width="2"><path d="M15 18l-6-6 6-6" stroke-linecap="round" stroke-linejoin="round"/></svg>
          All Apps
        </a>
        <div class="flex items-center gap-5 mb-4">
          <div class="w-16 h-16 rounded-2xl overflow-hidden ring-1 ring-white/10 flex-shrink-0">
            <img src={icon} alt={name} class="w-16 h-16" />
          </div>
          <div>
            <div class="flex items-center gap-3 flex-wrap">
              <h1 class="text-3xl md:text-4xl font-bold">{name}</h1>
              <span class={`text-sm font-medium px-3 py-1 rounded-full border ${platformColor}`}>{platform}</span>
            </div>
            <p class="text-text-light text-lg mt-1">{tagline}</p>
          </div>
        </div>
      </div>

      <!-- Description -->
      <div class="mb-14 fade-in">
        <p class="text-text-light leading-relaxed text-lg">{description}</p>
      </div>

      <!-- Features -->
      <div class="mb-14 fade-in">
        <h2 class="text-2xl font-bold mb-6">Features</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
          {features.map((feature) => (
            <div class="flex items-start gap-3 glass-card rounded-xl p-4">
              <span class="w-5 h-5 rounded-full bg-primary/10 flex items-center justify-center flex-shrink-0 mt-0.5 ring-1 ring-primary/20">
                <span class="text-primary text-xs">&#10003;</span>
              </span>
              <span class="text-sm text-text">{feature}</span>
            </div>
          ))}
        </div>
      </div>

      <!-- Editions -->
      <div class="mb-14 fade-in">
        <h2 class="text-2xl font-bold mb-6">Editions</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div class="glass-card rounded-2xl p-6">
            <h3 class="font-bold text-lg mb-2">Free</h3>
            <p class="text-text-light text-sm leading-relaxed">Get started with core features at no cost. Perfect for evaluating the app.</p>
          </div>
          <div class="glass-card rounded-2xl p-6 !border-primary/40 relative">
            <span class="absolute -top-3 left-4 bg-primary text-white text-xs font-semibold px-3 py-0.5 rounded-full shadow-lg shadow-primary/20">Popular</span>
            <h3 class="font-bold text-lg mb-2">Standard</h3>
            <p class="text-text-light text-sm leading-relaxed">Expanded limits and additional features for growing teams.</p>
          </div>
          <div class="glass-card rounded-2xl p-6">
            <h3 class="font-bold text-lg mb-2">Advanced</h3>
            <p class="text-text-light text-sm leading-relaxed">Full feature set with highest limits for enterprise-scale usage.</p>
          </div>
        </div>
      </div>

      <!-- Extra content slot -->
      <slot />

      <!-- CTA -->
      {comingSoon ? (
        <div class="fade-in glass-card rounded-2xl p-10 text-center !border-amber-500/20">
          <h2 class="text-xl font-bold mb-3">Coming Soon</h2>
          <p class="text-text-light mb-6">{name} is currently in Marketplace review and will be available soon.</p>
          <a href="/contact"
            class="btn-glow inline-flex items-center px-7 py-3.5 bg-primary text-white font-semibold rounded-xl">
            Get notified
          </a>
        </div>
      ) : (
        <div class="fade-in glass-card rounded-2xl p-10 text-center !border-primary/20">
          <h2 class="text-xl font-bold mb-3">Ready to get started?</h2>
          <p class="text-text-light mb-6">Install {name} from the Atlassian Marketplace.</p>
          <a href={marketplaceUrl} target="_blank" rel="noopener"
            class="btn-glow inline-flex items-center px-7 py-3.5 bg-primary text-white font-semibold rounded-xl">
            Get it on Marketplace
          </a>
        </div>
      )}
    </div>
  </section>
</Layout>
