---
import Layout from './Layout.astro';

interface Props {
  name: string;
  platform: 'Jira' | 'Confluence';
  tagline: string;
  description: string;
  features: string[];
  marketplaceUrl: string;
  icon: string;
}

const { name, platform, tagline, description, features, marketplaceUrl, icon } = Astro.props;
const platformColor = platform === 'Jira' ? 'bg-blue-900/50 text-blue-300' : 'bg-teal-900/50 text-teal-300';
---

<Layout title={name} description={tagline}>
  <section class="py-20">
    <div class="max-w-4xl mx-auto px-6">
      <!-- Header -->
      <div class="mb-12">
        <a href="/apps" class="text-sm text-text-light hover:text-primary transition-colors mb-4 inline-block">&larr; All Apps</a>
        <div class="flex items-center gap-4 mb-4">
          <img src={icon} alt={name} class="w-16 h-16 rounded-xl" />
          <div>
            <div class="flex items-center gap-3">
              <h1 class="text-3xl md:text-4xl font-bold">{name}</h1>
              <span class={`text-sm font-medium px-3 py-1 rounded-full ${platformColor}`}>{platform}</span>
            </div>
            <p class="text-text-light text-lg mt-1">{tagline}</p>
          </div>
        </div>
      </div>

      <!-- Description -->
      <div class="mb-12">
        <p class="text-text-light leading-relaxed text-lg">{description}</p>
      </div>

      <!-- Features -->
      <div class="mb-12">
        <h2 class="text-2xl font-semibold mb-6">Features</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
          {features.map((feature) => (
            <div class="flex items-start gap-3 bg-surface border border-border rounded-lg p-4">
              <span class="text-primary mt-0.5">&#10003;</span>
              <span class="text-sm text-text">{feature}</span>
            </div>
          ))}
        </div>
      </div>

      <!-- Editions -->
      <div class="mb-12">
        <h2 class="text-2xl font-semibold mb-6">Editions</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div class="bg-surface-raised border border-border rounded-xl p-6">
            <h3 class="font-semibold text-lg mb-2">Free</h3>
            <p class="text-text-light text-sm">Get started with core features at no cost. Perfect for evaluating the app.</p>
          </div>
          <div class="bg-surface-raised border-2 border-primary rounded-xl p-6 relative">
            <span class="absolute -top-3 left-4 bg-primary text-white text-xs font-medium px-2 py-0.5 rounded-full">Popular</span>
            <h3 class="font-semibold text-lg mb-2">Standard</h3>
            <p class="text-text-light text-sm">Expanded limits and additional features for growing teams.</p>
          </div>
          <div class="bg-surface-raised border border-border rounded-xl p-6">
            <h3 class="font-semibold text-lg mb-2">Advanced</h3>
            <p class="text-text-light text-sm">Full feature set with highest limits for enterprise-scale usage.</p>
          </div>
        </div>
      </div>

      <!-- Extra content slot -->
      <slot />

      <!-- CTA -->
      <div class="bg-primary/5 border border-primary/20 rounded-xl p-8 text-center">
        <h2 class="text-xl font-semibold mb-3">Ready to get started?</h2>
        <p class="text-text-light mb-6">Install {name} from the Atlassian Marketplace.</p>
        <a href={marketplaceUrl} target="_blank" rel="noopener"
          class="inline-flex items-center px-6 py-3 bg-primary text-white font-semibold rounded-lg hover:bg-primary-dark transition-colors">
          Get it on Marketplace
        </a>
      </div>
    </div>
  </section>
</Layout>
